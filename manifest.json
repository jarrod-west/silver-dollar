{
    "manifest_version": 2,
    "name": "Silver Dollar",
    "version": "1.0",

    "description": "Adds a blue border to all webpages matching mozilla.org.",

    "icons": {
      "48": "icons/border-48.png"
    },

    "content_scripts": [
      {
        "matches": ["*://*.gumtree.com.au/*"],
        "js": ["bundle.js"]
      }
    ],

    "permissions": ["storage"],

    "options_ui": {
      "page": "html/options.html"
    },

    "browser_specific_settings": {
      "gecko": {
        "id": "addon@example.com"
      }
    }
  }
