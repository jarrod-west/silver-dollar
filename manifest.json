{
    "manifest_version": 2,
    "name": "Silver Dollar",
    "version": "1.0",

    "description": "Adds a blue border to all webpages matching mozilla.org.",

    "icons": {
      "48": "images/silver-dollar-48.png"
    },

    "content_scripts": [
      {
        "matches": ["*://*.gumtree.com.au/*"],
        "js": [
          "browser-polyfill.js",
          "bundle.js"
        ]
      }
    ],

    "permissions": ["storage"],

    "browser_specific_settings": {
      "gecko": {
        "id": "silver-dollar@example.org"
      }
    },

    "browser_action": {
      "default_popup": "html/popup.html",
      "default_icon": {
        "16": "images/silver-dollar-16.png",
        "32": "images/silver-dollar-32.png"
      }
    }
  }
